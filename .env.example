# Docker Compose defaults
MARIADB_ROOT_PASSWORD=rootpass
MARIADB_DATABASE=newsdb
MARIADB_USER=user
MARIADB_PASSWORD=password

# Backend JWT
JWT_SECRET_KEY=please-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend
VITE_API_BASE=http://localhost:8000

# Database URLs
# Backend and crawler default to MariaDB in Docker Compose
DATABASE_URL=mysql+pymysql://user:password@db:3306/newsdb

# Crawler
CRAWLER_DATABASE_URL=mysql+pymysql://user:password@db:3306/newsdb
CRAWLER_USER_AGENT=news-crawler/1.0 (+https://yourdomain.example)
CRAWLER_DAILY_LIMIT=100
CRAWLER_REQUEST_DELAY=0.3
CRAWLER_REQUEST_JITTER=0.25

# Airflow (compose.airflow)
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin
AIRFLOW_EMAIL=admin@example.com
AIRFLOW_SECRET_KEY=please-change-this-long-random-string

# Analytics (Kafka)
# Example: localhost:9092 or broker1:9092,broker2:9092
# Kafka image (Confluent Platform, KRaft)
# e.g., 7.6.1 or 7.5.3
KAFKA_IMAGE=confluentinc/cp-kafka:7.6.1
# For Compose services use: kafka:9092
# For local host clients use: localhost:9094
KAFKA_BOOTSTRAP_SERVERS=
KAFKA_TOPIC=news_events
