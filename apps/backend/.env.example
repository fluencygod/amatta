# FastAPI / App
ENVIRONMENT=development
DEBUG=true

# MariaDB via PyMySQL
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/newsdb

# Auth / JWT
JWT_SECRET_KEY=please-change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
# JSON array of origins. Set your Firebase Hosting domains (replace <PROJECT_ID>)
# and local dev origins as needed. Example:
# ["https://<PROJECT_ID>.web.app","https://<PROJECT_ID>.firebaseapp.com","http://localhost:5173"]
CORS_ALLOWED_ORIGINS=["https://<PROJECT_ID>.web.app","https://<PROJECT_ID>.firebaseapp.com","http://localhost:5173","http://localhost:8080"]
# No cookies needed for analytics endpoints; keep credentials off
CORS_ALLOW_CREDENTIALS=false
# Methods/headers commonly sufficient for JSON APIs
CORS_ALLOWED_METHODS=["GET","POST","OPTIONS"]
CORS_ALLOWED_HEADERS=["Content-Type","Authorization"]
